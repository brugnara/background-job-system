<!DOCTYPE html>
<html>
{{template "head"}}
<body>
{{template "navbar"}}

{{template "hero" "Jobs|As listed below" | toHero}}
{{$id := randID}}
{{$jobs := .Jobs}}

<style>
tr {
  cursor: pointer;
}
</style>

<script>
const className = 'is-selected'

function selectJob(uuid) {
  console.log('job selected:', uuid)
  document.querySelectorAll('tr.job').forEach(item => {
    item.classList.remove(className)
  })
  document.querySelector('#job-' + uuid).classList.add(className)
  // redirect
  window.location.href = '/job/' + uuid
}
</script>

<div class="container">
  {{template "paginator" .}}

  <div class="table-container">
    <table class="table is-striped", id="{{$id}}">
      <caption>{{len $jobs}} job/s of {{.Count}}</caption>

      <thead>
        <tr>
          <th>Name</th>
          <th>Endpoint</th>
          <th>Payload</th>
          <th>Due</th>
          <th>Status</th>
          <th>Retries</th>
          <th>ContentType</th>
          <th>HTTPOkStatus</th>
        </tr>
      </thead>

      <tbody>
        {{if len $jobs}}
          {{range $jobs}}
          {{template "jobRow" .}}
          {{end}}
        {{else}}
        <tr>
          <th>No jobs!</th>
        </tr>
        {{end}}
      </tbody>
    </table>

  </div>

  {{template "paginator" .}}
</div>
</body>
</html>
